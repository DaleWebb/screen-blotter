{
  "name": "ScreenBlotter",
  "description": "Blot out sensitive data when interacting with customer's instances",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*.care-planner.co.uk/*",
    "https://*.care-planner.co.uk/*"
  ],

  "background": {
     "scripts": ["background.js"],
     "persistent": false
   },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ScreenBlotter"
  },

  "manifest_version": 2
}
